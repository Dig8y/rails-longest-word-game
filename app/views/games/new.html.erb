<h1 class='title'>New game</h1>



<div class='letter-container'>
  <% @letters.each do |letter| %>
  <div class='letter'>
    <p><%= letter %></p>
  </div>
  <% end %>
</div>
<h2 class="title">What is the longest word you can find?</h2>
<form action="score" method="post" data-turbo="false" class='form'>
  <div class='input-group w-50'>
    <input type="text" name="word" class="form-control" width='400px'>
    <input type="submit" value="Play" class="btn btn-primary">
  </div>
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <%= hidden_field_tag :letters, @letters %>
  <%= hidden_field_tag :start_time, @start_time %>
</form>
